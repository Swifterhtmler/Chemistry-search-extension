{
    "manifest_version": 2,
    "name": "Chemistry Extension",
    "version": "1.1",
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "clipboardWrite"

    ],
    "commands": {
      "openPopup": {
        "suggested_key": {
          "default": "Alt+U",
          "mac": "Command+U"
        },
        "description": "Opens Popup"
      }
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["background.js"]
      }
    ],
    "browser_action": {
      "default_popup": "Popup.html"
    }
  }
  